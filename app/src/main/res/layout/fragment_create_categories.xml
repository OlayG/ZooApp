<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_light"
    tools:context="com.example.admin.zooapp.CreateCategoriesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAddNewCategory"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="40sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/etCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a new category name..."/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Description"
                android:textSize="40sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/etCategoryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter a description for the category...."/>

        </LinearLayout>

        <Button
            android:id="@+id/btnSaveCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llAddNewCategory"
            android:layout_marginLeft="138dp"
            android:layout_marginStart="138dp"
            android:layout_marginTop="126dp"
            android:gravity="center"
            android:text="Save"/>

    </RelativeLayout>

</FrameLayout>
